/* login.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.logo-container {
  margin-bottom: 50rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #007aff;
}

.form-container {
  width: 80%;
  padding: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.input-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
}

input {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.error-msg {
  color: #e64340;
  font-size: 24rpx;
  margin-bottom: 30rpx;
  display: block;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
  border: none;
}

.login-btn:active {
  background-color: #0062cc;
}

/* 确保按钮内文字上下居中 */
.login-btn { display: flex; justify-content: center; align-items: center; }